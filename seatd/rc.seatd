#!/bin/sh
#
# /etc/rc.d/seatd: start/stop seatd daemon
#
. /etc/rc.subr

NAME="SEATD daemon"
PROG=/usr/bin/seatd
OPTS="-g video"
PIDFILE=/run/seatd.pid

case $1 in
  start)
    msg "Starting $NAME..."
    start_daemon  $PROG  $OPTS
    ;;
  stop)
    msg "Stopping $NAME..."
    stop_daemon  $PROG
    ;;
  restart)
    $0 stop
    sleep 1
    $0 start
    ;;
  status)
    status_daemon  $PROG
    ;;
  *)
    echo "Usage: $0 [start|stop|restart|status]"
    ;;
esac

# End of file
