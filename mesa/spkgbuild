# description	: OpenGL compatible 3D graphics library
# depends	: llvm python3-mako elfutils bison flex libxext libxdamage
# depends	: libxshmfence libxxf86vm libxrandr libdrm libglvnd libva

name=mesa
version=23.1.2
release=2
source="https://mesa.freedesktop.org/archive/$name-$version.tar.xz"

build() {

	LLVM="-Dllvm=true -Dshared-llvm=true -Ddraw-use-llvm=true"

	if scratch isinstalled xf86-video-amdgpu ; then
		OPTS="-Dgallium-va=enabled -Dgallium-drivers=swrast,radeonsi"
	elif scratch isinstalled xf86-video-ati ; then
		OPTS="-Dgallium-va=enabled -Dgallium-drivers=swrast,r600" 
	elif scratch isinstalled xf86-video-intel ; then
		OPTS="-Dgallium-va=disabled -Dgallium-drivers=swrast,crocus"
	fi

	venom-meson $name-$version build \
		-Ddri3=enabled \
		-Degl=enabled \
		-Dgbm=enabled \
		-Dgles1=disabled \
		-Dgles2=enabled \
		-Dglx=disabled \
                -Dosmesa=false \
                -Dgallium-xa=disabled \
                -Dgallium-omx=disabled \
                -Dgallium-vdpau=disabled  \
                -Dgallium-opencl=disabled  \
                -Dgallium-nine=false \
		-Dplatforms=x11 \
		-Dshared-glapi=enabled \
		-Dvulkan-drivers='' \
		-Dglvnd=true \
                -Dzstd=disabled \
		-Dvideo-codecs=vc1dec,h264dec,h264enc,h265dec,h265enc \
		-Dvalgrind=disabled $LLVM $OPTS
	meson compile -C build
	DESTDIR=$PKG meson install --no-rebuild -C build

	# indirect rendering symlink
	ln -s libGLX_mesa.so.0 $PKG/usr/lib/libGLX_indirect.so.0
}
