# description	: Firmware files for Linux

name=linux-firmware-amd
version=20230404
release=1
source="https://git.kernel.org/pub/scm/linux/kernel/git/firmware/linux-firmware.git/snapshot/linux-firmware-$version.tar.gz"

build() {
	cd linux-firmware-$version	
	mkdir -pv $PKG/lib/firmware/amdgpu
	cp -r amd  amd-ucode rtl_nic $PKG/lib/firmware/
	cp amdgpu/green* $PKG/lib/firmware/amdgpu
}
