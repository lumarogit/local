# description	: Brave browser (binary)
# homepage	: https://brave.com/
# depends	: alsa-lib cups-minimal gtk3 libxscrnsaver nss 

name=brave-bin
version=1.52.117
release=1
source="$name-$version.deb::https://github.com/brave/brave-browser/releases/download/v$version/brave-browser_${version}_amd64.deb"

build() {
	bsdtar -xf $name-$version.deb
	bsdtar -xf data.tar.xz -C $PKG/

	mkdir $PKG/usr/share/icons
	mv $PKG/opt/brave.com/brave/product_logo_128.png \
           $PKG/usr/share/icons/brave-browser.png

	# remove all crap
	for i in a b c d el es-419 et f g h i j k l m p r s t u v ; do
	    rm -rf $PKG/opt/brave.com/brave/locales/$i*
	    rm -rf $PKG/opt/brave.com/brave/resources/brave_extension/_locales/$i* 
	done
	    rm -r $PKG/opt/brave.com/brave/product_logo*
}
