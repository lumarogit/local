# description	: A complete service manager for s6 systems.
# homepage	: https://skarnet.org/software/s6-rc/
# depends	: s6

name=s6-rc
version=0.5.4.2
release=1
source="https://skarnet.org/software/$name/$name-$version.tar.gz"

build() {
	cd $name-$version
	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--datadir=/etc \
		--enable-shared
	make
	make DESTDIR=$PKG install
}
